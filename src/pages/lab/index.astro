---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('lab');
const sortedProjects = projects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Base title="Lab" description="Interactive demos, prototypes, and experiments exploring AI-era learning.">
  <section class="section">
    <div class="intro">
      <h1 class="page-title">Lab</h1>
      <p class="intro-text">
        Things I've built to think through problems. Interactive demos, prototypes, and experiments exploring what AI-era learning infrastructure might look like.
      </p>
    </div>

    {sortedProjects.length > 0 ? (
      <div class="projects">
        {sortedProjects.map(project => (
          <a href={`/lab/${project.slug}`} class="project-card">
            {project.data.image ? (
              <img src={project.data.image} alt="" class="project-thumbnail" />
            ) : (
              <div class="project-icon">
                <svg viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="3" />
                  <circle cx="12" cy="4" r="2" />
                  <circle cx="12" cy="20" r="2" />
                  <circle cx="4" cy="12" r="2" />
                  <circle cx="20" cy="12" r="2" />
                  <line x1="12" y1="6" x2="12" y2="9" />
                  <line x1="12" y1="15" x2="12" y2="18" />
                  <line x1="6" y1="12" x2="9" y2="12" />
                  <line x1="15" y1="12" x2="18" y2="12" />
                </svg>
              </div>
            )}
            <div class="project-content">
              <h2 class="project-title">{project.data.title}</h2>
              <p class="project-description">{project.data.description}</p>
              <span class="project-status">{project.data.status}</span>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <p>Experiments and demos coming soon.</p>
      </div>
    )}
  </section>
</Base>

<style>
  .section {
    padding: 80px 64px;
  }

  @media (max-width: 768px) {
    .section {
      padding: 60px 32px;
    }
  }

  .intro {
    max-width: 800px;
    margin-bottom: 48px;
  }

  .page-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 3.5rem;
    font-weight: 400;
    color: #2C2825;
    margin-bottom: 24px;
    line-height: 1.1;
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: 2.5rem;
    }
  }

  .intro-text {
    font-size: 1.125rem;
    color: #5A524A;
    line-height: 1.75;
  }

  .projects {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 28px;
  }

  @media (max-width: 1024px) {
    .projects {
      grid-template-columns: 1fr;
    }
  }

  .project-card {
    display: flex;
    gap: 28px;
    align-items: flex-start;
    padding: 40px;
    background: #FAF8F5;
    border-radius: 4px;
    border: 1px solid #EBE6E0;
    text-decoration: none;
    transition: all 0.2s;
  }

  .project-card:hover {
    border-color: #D4CCC2;
  }

  .project-icon {
    width: 48px;
    height: 48px;
    background: #F0EAE3;
    border-radius: 4px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
  }

  .project-icon svg {
    width: 24px;
    height: 24px;
    stroke: #8B7E71;
    stroke-width: 1.5;
    fill: none;
  }

  .project-thumbnail {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 4px;
    flex-shrink: 0;
  }

  .project-content {
    flex: 1;
  }

  .project-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.25rem;
    font-weight: 500;
    color: #2C2825;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .project-description {
    font-size: 0.9rem;
    color: #6B635A;
    line-height: 1.6;
    margin-bottom: 12px;
  }

  .project-status {
    display: inline-block;
    font-size: 0.7rem;
    color: #FFFDFB;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    background: #0D9488;
    padding: 4px 10px;
    border-radius: 3px;
  }

  .empty-state {
    text-align: center;
    padding: 80px 0;
    color: #8B7E71;
  }
</style>
